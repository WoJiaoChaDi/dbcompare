<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chadi.dbcompare.dao.User_ConstraintsMapper">

    <!--返回List-->
    <select id="getUser_ConstraintsByPros"  parameterType="java.util.Map" resultType="com.chadi.dbcompare.bean.User_Constraints">
		SELECT t1.* FROM User_Constraints t1
        where 1=1

        <foreach collection="params.keys" item="key" open="and" close="" separator="and" >
            t1.${key} = #{params[${key}]}
        </foreach>

    </select>

</mapper>